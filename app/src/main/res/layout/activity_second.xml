<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/txtGaDI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="120dp"
        android:ems="10"
        android:hint="Ga Di"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtGaDen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="118dp"
        android:ems="10"
        android:hint="Ga Den"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGaDI" />

    <EditText
        android:id="@+id/txtGiaTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="122dp"
        android:ems="10"
        android:hint="Gia Tien"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGaDen" />

    <RadioGroup
        android:id="@+id/rdKhuHoi"
        android:layout_width="219dp"
        android:layout_height="121dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGiaTien">

        <RadioButton
            android:id="@+id/radioButtonKhuHoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khứ hồi" />

        <RadioButton
            android:id="@+id/radioButtonMotChieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Một Chiều" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="132dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdKhuHoi" />

    <Button
        android:id="@+id/buttonQuayLai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="23dp"
        android:text="QuayLai"
        app:layout_constraintEnd_toStartOf="@+id/buttonUpdate"
        app:layout_constraintTop_toBottomOf="@+id/rdKhuHoi" />
</androidx.constraintlayout.widget.ConstraintLayout>